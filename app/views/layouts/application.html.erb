  </head>

  <body>
    <div class="navbar">
      <h2><%= link_to 'Simple AirBnB', flats_path%></h2>
      <h2><%= link_to 'New Flat', new_flat_path %></h2>
    </div>
    <%= yield %>
  </body>
</html>
